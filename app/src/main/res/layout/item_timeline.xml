<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="80dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_centerHorizontal="true"
    android:layout_width="wrap_content">





    <androidx.cardview.widget.CardView

        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:id="@+id/hedefler_kartviv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="10dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/gorevBittiMi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"></CheckBox>

            <RelativeLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">






                    <LinearLayout
                        android:layout_gravity="left"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLength="20"
                            android:text="Son Tarih :"
                            android:textSize="12sp"
                            android:textStyle="bold">
                        </TextView>

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:id="@+id/sontarih"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLength="20"
                            android:text="Pazartesi"
                            android:textSize="12sp"
                            android:textStyle="bold">
                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_gravity="left"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/hedef_adi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLength="20"
                            android:text="Kitap oku"
                            android:textSize="17sp"
                            android:textStyle="bold">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_gravity="left"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLength="20"
                            android:text="Ã–ncelik :"
                            android:textSize="12sp"
                            android:textStyle="bold">
                        </TextView>

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:id="@+id/oncelik"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLength="20"
                            android:text="Pazartesi"
                            android:textSize="12sp"
                            android:textStyle="bold">
                        </TextView>

                    </LinearLayout>




                </LinearLayout>






                <RelativeLayout
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:src="@drawable/ic_baseline_delete_24"
                            android:id="@+id/delete"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            ></ImageView>

                    </LinearLayout>




                </RelativeLayout>


            </RelativeLayout>


        </LinearLayout>





    </androidx.cardview.widget.CardView>

</LinearLayout>


